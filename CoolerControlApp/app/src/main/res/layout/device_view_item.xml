<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="@dimen/activity_horizontal_margin"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/textViewFeatureTwoValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textViewFeatureOneValue"
                android:layout_alignTop="@+id/textViewFeatureTwoName"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewFeatureTwoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textViewFeatureOneName"
                android:layout_below="@+id/textViewFeatureOneName"
                android:layout_marginTop="11dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewFeatureOneValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/textViewFeatureOneName"
                android:layout_marginEnd="25dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewFeatureOneName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textViewName"
                android:layout_alignBottom="@+id/textViewName"
                android:layout_marginEnd="13dp"
                android:layout_toStartOf="@+id/textViewFeatureOneValue"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="11dp"
                android:text="TextView"
                android:textAppearance="@android:style/TextAppearance.Material.Headline"
                tools:text="Device" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>